workspace "十" output VGA-1-1

# color windows
# class                 border          backgr.          text           indicator       child_border
client.focused          $mikuPink       $mikuBlack      $mikuGreen	$mikuPink	$mikuPink
client.focused_inactive $mikuGreen      $mikuBlack      $mikuGreen      $mikuGreen  	$mikuGreen
client.unfocused        $mikuGray       $mikuBlack      $mikuGray       $mikuGray	$mikuGray
